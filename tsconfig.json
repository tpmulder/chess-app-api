{
  "compilerOptions": {
    "target": "es5",                     
    "module": "commonjs",                  
    "lib": ["es6", "dom"],                     
    "allowJs": true,
    "outDir": "./build",
    "types": ["reflect-metadata"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,                          
    "rootDir": "./src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}